class <%= controller_class %> < ApplicationController
  def create
    @<%= payable %> = <%= payable_class %>.create!
    srv = TransactionService.new(<%= payable %>.id)

    if srv.create
      redirect_to(srv.process_url)
    else
      render_payment_error_view(srv.error)
    end
  end

  def notification
